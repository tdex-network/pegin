{
  "name": "pegin",
  "version": "0.0.1",
  "description": "TS package using wasm from go-elements and libwally-core",
  "main": "./src/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "copyfiles": "^2.4.1",
    "liquidjs-lib": "^5.1.12",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build-ts": "tsdx build --tsconfig tsconfig.json --entry src/index.ts",
    "copy-wasm": "copyfiles *.wasm dist",
    "build": "yarn build-ts && yarn copy-wasm",
    "test": "tsdx test",
    "lint": "tsdx lint src test --ignore-pattern src/lib/*.js",
    "lint:fix": "tsdx lint src test --ignore-pattern src/lib/*.js --fix"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
